# Configurações do npm
# Otimiza a instalação de pacotes
audit=false
prefer-offline=true
package-lock=true
save-exact=true
progress=false
fund=false
# Configurações de cache
cache-min=9999999
prefer-offline=true
# Configurações de segurança
audit-level=moderate
# Configurações de logs
loglevel=error
# Configurações de rede
fetch-retries=3
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000
# Configurações específicas para CI
if-present=true
# Configurações de scripts
ignore-scripts=false
# Configurações de engine-strict
engine-strict=true
